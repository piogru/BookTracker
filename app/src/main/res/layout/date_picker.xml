<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/date_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/recyclerview"
        >

        <LinearLayout
            android:id="@+id/selected_date_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/pick_date_button"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_width="@dimen/button_icon"
                android:layout_height="@dimen/button_icon"
                android:layout_marginEnd="@dimen/margin_small"
                android:drawableTint="@color/white"
                android:gravity="center"
                android:padding="0dp"
                android:paddingStart="12dp"
                android:textColor="@color/black"
                android:tint="@color/secondaryDark"
                app:icon="@drawable/ic_calendar_black_24dp" />

            <TextView
                android:id="@+id/selected_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/selected_date"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/margin_small"
                />

            <Button
                android:id="@+id/clear_date_button"
                android:layout_width="@dimen/button_icon"
                android:layout_height="@dimen/button_icon"
                android:paddingStart="12dp"
                android:layout_gravity="center"
                android:padding="0dp"
                android:layout_weight="1"
                app:icon="@drawable/ic_cancel_black_24dp"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                />

        </LinearLayout>

    </LinearLayout>

</merge>